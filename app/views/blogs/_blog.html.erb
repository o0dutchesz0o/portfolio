<div id="<%= dom_id blog %>">
  <h1 class="pointer"><%= link_to blog.title, blog_path(blog), {:style=>'text-decoration:none;color:black;'}%></h1>
  <p><%= blog.body %></p>
  <p>Published <%= time_ago_in_words(blog.created_at) %> ago</p>
  <p>Status: <%= link_to blog.status.titleize, toggle_status_blog_path(blog) %> </p>
</div>
